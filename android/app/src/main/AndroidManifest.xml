<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.popcorn.cakey">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cakey">
        <activity android:name=".profile.Achievement"></activity>
        <activity android:name=".profile.ViewProfile">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Screen" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="behind" />
        <activity
            android:name=".SignupActivity"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="behind" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="behind" />
        <activity android:name=".WriteBlogActivity" />
        <activity android:name=".FAQsActivity" />
        <activity
            android:name=".mainscreen.MainActivity"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="behind"
            android:theme="@style/Main_Screen" />
    </application>

</manifest>